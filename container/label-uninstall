#!/bin/sh -eu

# This is the uninstall script for gdm when run in a privileged
# container.
#
# The host file system must be mounted at /host

cd /
PATH="/usr/bin:/usr/sbin"

if [ ! -d /host/etc ] || [ ! -d /host/proc ] || [ ! -d /host/run ]; then
    echo "gdm-uninstall: host file system is not mounted at /host" >&2
    exit 1
fi

# removing installed files
rm -fr /host/etc/sysconfig/displaymanager /host/etc/systemd/system/gdm.service /host/etc/gdm /host/etc/dbus-1/system.d/gdm.conf

# Everything else is settings and should remain
